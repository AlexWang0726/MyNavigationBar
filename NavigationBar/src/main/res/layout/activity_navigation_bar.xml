<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wonluue.mynavigationbar.NavigationBarActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_size">

            <LinearLayout
                android:id="@+id/ll_toolbar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_toolbar_left_img"
                    android:layout_width="@dimen/toolbar_height_size"
                    android:layout_height="match_parent"
                    android:padding="@dimen/toolbar_img_padding"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/toolbar_img_padding_negative"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_toolbar_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/color_toolbar_text"
                    android:text="左边"
                    android:layout_marginLeft="@dimen/toolbar_img_padding"
                    android:textSize="@dimen/toolbar_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_toolbar_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_toolbar_center_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="中间"
                    android:textColor="@color/color_toolbar_text"
                    android:visibility="gone"
                    android:textSize="@dimen/toolbar_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_toolbar_right_img"
                    android:layout_width="@dimen/toolbar_height_size"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:padding="@dimen/toolbar_img_padding"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_toolbar_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="右边"
                    android:textColor="@color/color_toolbar_text"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/toolbar_img_padding"
                    android:textSize="@dimen/toolbar_text_size" />
            </LinearLayout>
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_navigation_bar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>
