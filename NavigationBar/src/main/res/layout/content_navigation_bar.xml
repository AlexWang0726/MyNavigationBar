<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/openFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonluue.mynavigationbar.activity.NavigationBarActivity">

    <FrameLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/fragmentParent" />

    <View
        android:id="@+id/tabbar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/color_tabbar_line"/>
    <GridView
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height_size"
        android:elevation="5dp"
        android:background="@color/color_white"
        android:layout_centerHorizontal="true"></GridView>
</LinearLayout>
